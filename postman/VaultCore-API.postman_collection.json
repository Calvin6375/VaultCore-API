{
  "info": {
    "name": "VaultCore API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"email\": \"customer@example.com\",\n  \"password\": \"Pass@word123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"phoneNumber\": \"+254700000000\"\n}"},
            "url": "{{baseUrl}}/api/auth/register"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"email\": \"admin@vaultcore.local\",\n  \"password\": \"Admin@123\"\n}"},
            "url": "{{baseUrl}}/api/auth/login"
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"refreshToken\": \"<paste_refresh_token>\"\n}"},
            "url": "{{baseUrl}}/api/auth/refresh"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"refreshToken\": \"<paste_refresh_token>\"\n}"},
            "url": "{{baseUrl}}/api/auth/logout"
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/users/me"
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {"mode": "raw", "raw": "{\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Doe\",\n  \"phoneNumber\": \"+254711111111\"\n}"},
            "url": "{{baseUrl}}/api/users/{{userId}}"
          }
        },
        {
          "name": "Search Users (Admin)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/users?page=1&pageSize=20&search="
          }
        },
        {
          "name": "Assign Role (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {"mode": "raw", "raw": "{\n  \"roleName\": \"Support\"\n}"},
            "url": "{{baseUrl}}/api/users/{{userId}}/roles"
          }
        }
      ]
    },
    {
      "name": "Wallets",
      "item": [
        {
          "name": "Get My Wallet",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/wallets/me"
          }
        },
        {
          "name": "Get Wallet by User (Admin)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/wallets/user/{{userId}}"
          }
        },
        {
          "name": "Freeze Wallet (Admin)",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/wallets/{{walletId}}/freeze"
          }
        },
        {
          "name": "Unfreeze Wallet (Admin)",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/wallets/{{walletId}}/unfreeze"
          }
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Deposit (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {"mode": "raw", "raw": "{\n  \"amount\": 1000.00,\n  \"idempotencyKey\": \"dep-optional-unique-key\",\n  \"reference\": \"Initial deposit\"\n}"},
            "url": "{{baseUrl}}/api/transactions/deposit/{{userId}}"
          }
        },
        {
          "name": "Withdraw",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {"mode": "raw", "raw": "{\n  \"amount\": 50.00,\n  \"idempotencyKey\": \"withdraw-optional-key\",\n  \"reference\": \"ATM\"\n}"},
            "url": "{{baseUrl}}/api/transactions/withdraw"
          }
        },
        {
          "name": "Transfer",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {"mode": "raw", "raw": "{\n  \"toUserId\": \"<recipient-user-guid>\",\n  \"amount\": 100.00,\n  \"idempotencyKey\": \"transfer-optional-key\",\n  \"reference\": \"Payment\",\n  \"description\": \"For services\"\n}"},
            "url": "{{baseUrl}}/api/transactions/transfer"
          }
        },
        {
          "name": "My Transaction History",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/transactions/me/history?page=1&pageSize=20"
          }
        },
        {
          "name": "All Transactions (Admin)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/transactions?page=1&pageSize=20"
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Audit Logs",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": "{{baseUrl}}/api/admin/audit-logs?page=1&pageSize=20"
          }
        }
      ]
    }
  ],
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:5000"},
    {"key": "accessToken", "value": ""},
    {"key": "userId", "value": ""},
    {"key": "walletId", "value": ""}
  ]
}
