# Database (for local dev or override in docker-compose)
ConnectionStrings__DefaultConnection=Host=localhost;Database=VaultCore;Username=postgres;Password=postgres

# JWT - use a long random secret in production (min 32 chars)
Jwt__Secret=YourSuperSecretKeyThatIsAtLeast32CharactersLong!
Jwt__Issuer=VaultCore
Jwt__Audience=VaultCore
Jwt__AccessTokenExpirationMinutes=15
Jwt__RefreshTokenExpirationDays=7

# Optional: override for Docker
# JWT_SECRET=your-production-secret-at-least-32-chars
